<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/CyclopsLightestRed">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".70"
        android:layout_marginLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/contentsView"
            android:textSize="20dp"
            style="@style/StandText"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:id="@+id/textView3"
                android:textSize="15dp"
                android:textStyle="bold"
                style="@style/StandText"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/viewerpriceText"
                android:textSize="15dp"
                android:textStyle="bold"
                style="@style/StandText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty: "
                android:id="@+id/textView2"
                android:textSize="15dp"
                android:textStyle="bold"
                style="@style/StandText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/viewerquantityText"
                android:textSize="15dp"
                android:minWidth="20dp"
                style="@style/StandText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:id="@+id/textView4"
                android:textSize="15dp"
                android:textStyle="bold"
                style="@style/StandText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/viewerstatusText"
                android:textSize="15dp"
                android:minWidth="20dp"
                style="@style/StandText"/>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/closebutton"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/CyclopsDarkRed"
        android:padding="3dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/close_btn_x"
        android:layout_height="fill_parent"
        android:layout_weight=".15"
        android:textColor="#fff"
        android:scaleType="fitCenter"
        android:visibility="gone"/>

</LinearLayout>